<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <div class="header">
            <h1>KeepTrack</h1>
        </div>
            <% if flash.notice %>
                <p class="notice">
                    <%= flash.notice %>
                </p>
            <% end %>

        <div id="side_menu">
            <div class="bar">
                <p class="bar_title">side menu</p>
            </div>
            <div class="money_box">
                <div class="bar">
                    <p class="bar_title">所持金</p>
                </div>
                <p>wallet:<%= @money.wallet %>円</p>
                <p>bank:<%= @money.bank %>円</p>
            </div>
            <div class="menu_bar">
                <div class="bar">
                    <p class="bar_title">メニューバー</p>
                </div>
                <p><%= link_to "所持金の修正をする" ,[:edit ,@money] %></p>
                <p id="create_event"><%= link_to "新しいeventを作成する" ,new_event_path %></p>
            </div>
            <div class="balance">
                <div class="bar">
                    <p class="bar_title">収支</p>
                </div>
                <div class="last_month">
                    <div class="bar">
                        <p class="bar_title">先月の収支</p>
                    </div>
                    <p><%= @LastMonth_sum %>円</p>
                </div>
                <div class="this_month">
                    <div class="bar">
                        <p class="bar_title">今月の収支(予定)</p>
                    </div>
                    <p><%= @ThisMonth_sum %>円</p>
                </div>
            </div>


        </div>
        <div class="main">
            <div class="bar">
                <p class="bar_title">event一覧</p>
            </div>
            <div class="main_right">

                <table id=recorded_event>
                    <thead>
                        <tr>
                            <td  colspan="6" class="title">記録済みevent</th>
                        </tr>
                        <tr>
                            <th>タイトル</th>
                            <th>金額</th>
                            <th>日時</th>
                            <th>詳細</th>
                            <th>編集</th>
                            <th>削除</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @events_recorded.each do |event| %>
                        <tr>
                            <td><%= event.title %></td>
                            <td><%= event.amount %>円</td>
                            <td><%= event.day %></td>
                            <td><%= link_to "詳細を見る" ,event%></td>
                            <td><%= link_to "編集する" ,[:edit ,event]%></td>
                            <td><%= link_to "削除する" ,event,method: :delete,data:{confirm: "本当に削除しますか？"}%></td>

                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="main_left">

                <table id=unrecorded_event>
                    <thead>
                        <tr>
                            <td colspan="6" class="title">予定event</th>
                        </tr>
                        <tr>
                            <th>タイトル</th>
                            <th>金額</th>
                            <th>日時</th>
                            <th>詳細</th>
                            <th>編集</th>
                            <th>削除</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @events_unrecorded.each do |event| %>
                        <tr>
                            <td><%= event.title %></td>
                            <td><%= event.amount %>円</td>
                            <td><%= event.day %></td>
                            <td><%= link_to "詳細を見る" ,event%></td>
                            <td><%= link_to "編集する" ,[:edit ,event]%></td>
                            <td><%= link_to "削除する" ,event,method: :delete,data:{confirm: "本当に削除しますか？"}%></td>

                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>


        </div>

    </body>
</html>
